@page
@model WebUi.Pages.Books.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>New book</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CreateRequest.ISBN" class="control-label"></label>
                <input asp-for="CreateRequest.ISBN" class="form-control" />
                <span asp-validation-for="CreateRequest.ISBN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateRequest.Title" class="control-label"></label>
                <input asp-for="CreateRequest.Title" class="form-control" />
                <span asp-validation-for="CreateRequest.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateRequest.Author" class="control-label"></label>
                <input asp-for="CreateRequest.Author" class="form-control" />
                <span asp-validation-for="CreateRequest.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
